{% extends "base.html.twig" %}

{% block body %}
	<h1>{{ acteur.prenom ~' '~ acteur.nom }}</h1>

	<ul>
		<li>id :
			{{acteur.id}}</li>
		<li>prenom :
			{{acteur.prenom}}</li>
		<li>nom :
			{{acteur.nom}}</li>
	</ul>
	<h2>Roles</h2>
	<ul>
		{% for role in acteur.roles %}
			<li>{{role.nom}}</li>
		{% endfor %}
	</ul>
	<a href="{{path('home')}}">Retour</a>
{% endblock %}
